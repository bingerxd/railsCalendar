<%= form_with(model: course) do |form| %>
  <% if course.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :course_name, style: "display: block" %>
    <%= form.text_field :course_name, class:"form-control", placeholder:"Name of the course" %>
  </div>

  <div class="field form-group">
    <%= form.label :teacher_name, style: "display: block" %>
    <%= form.text_field :teacher_name, class:"form-control", placeholder:"Name of the teacher" %>
  </div>

  <div class="field form-group">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class:"form-control", placeholder:"example@domain.com" %>
  </div>

  <div class="field form-group">
    <%= form.label :start_time, style: "display: block" %>
    <%= form.text_field :start_time, class:"form-control", placeholder:"Start time of the course" %>
  </div>

  <div class="field form-group">
    <%= form.label :end_time, style: "display: block" %>
    <%= form.text_field :end_time, class:"form-control", placeholder:"End time of the course" %>
    <p>
  </div>
  <% if course.user_id == current_user.id %>
    <div class="field form-group">
      <%= form.number_field :user_id, id: :course_user_id, value:current_user.id, type: :hidden %>
    </div>
  <% end %>
  <div>
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
