<h1 class="text-center"><%= pluralize(@courses.count, "Result") %></h1>
<%= render 'search/form' %>
</p>
<h1 class="text-center">Courses</h1>
</p>
<div class="container">
	<table class="table table-striped table table-bordered">
		<thead class="table-dark">
			<tr>
			<th><%= sort_link(@course_query, :course_name, "Course name:",default_order: :asc) %></th>
			<th><%= sort_link(@course_query, :teacher_name, "Teacher name:") %></th>
			<th><%= sort_link(@course_query, :email, "Email:") %></th>
			<th><%= sort_link(@course_query, :start_time, "Start time:") %></th>
			<th><%= sort_link(@course_query, :end_time, "End Time:") %></th>
			</tr>
		</thead>

		<tbody>
			<% @courses.each do |post| %>
				<tr>
					<td><%= link_to post.course_name, post %></td>
					<td><%= post.teacher_name %></td>
					<td><%= post.email %></td>
					<td><%= post.start_time %></td>
					<td><%= post.end_time %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
</p>
